        <item name="colorPrimaryContainer">@color/green90</item>
        <item name="colorOnPrimaryContainer">@color/green10</item>
        <item name="colorSecondary">@color/violet40</item>
        <item name="colorOnSecondary">@color/violet100</item>
        <item name="colorSecondaryContainer">@color/violet90</item>
        <item name="colorOnSecondaryContainer">@color/violet10</item>
        <item name="colorTertiary">@color/green_grey40</item>
        <item name="colorOnTertiary">@color/green_grey100</item>
        <item name="colorTertiaryContainer">@color/green_grey90</item>
        <item name="colorOnTertiaryContainer">@color/green_grey10</item>
        <item name="colorError">@color/red40</item>
